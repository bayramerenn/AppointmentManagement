@model AppUserEditDto

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="edit" class="form" id="kt_form" method="post">
    <div class="card card-custom card-sticky" id="kt_page_sticky_card">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">
                    Tedarikçi Kayıt
                </h3>
            </div>
            <div class="card-toolbar">
                <a href="/Account/Index" class="btn btn-light-primary font-weight-bolder mr-2">
                    <i class="ki ki-long-arrow-back icon-xs"></i>Geri
                </a>

                <input type="submit" value="Kaydet" class="btn btn-primary font-weight-bolder" />

            </div>
        </div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-custom alert-light-success fade show mb-5" role="alert">
                <div class="alert-icon"><i class="flaticon-warning"></i></div>
                <div class="alert-text">@TempData["Message"]</div>
                <div class="alert-close">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="ki ki-close"></i></span>
                    </button>
                </div>
            </div>

        }
        <div class="card-body">
            <!--begin::Form-->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserName" />
          

            <div class="row">
                <div class="col-xl-2"></div>
                <div class="col-xl-8">
                    <div class="my-5">
                        <h3 class="text-dark font-weight-bold mb-10">Tedarikçi Bilgileri:</h3>
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group row">

                            <label asp-for="@Model.FirstName" class="col-3"></label>
                            <div class="col-9">
                                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                <input asp-for="@Model.FirstName" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LastName" class="col-3"></label>
                            <div class="col-9">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <input asp-for="LastName" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="VendorCode" class="col-3"></label>
                            <div class="col-9">
                                <span asp-validation-for="VendorCode" class="text-danger"></span>
                                <input class="form-control" asp-for="VendorCode">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="VendorDescription" class="col-3"></label>

                            <div class="col-9">
                                <span asp-validation-for="VendorDescription" class="text-danger"></span>
                                <input class="form-control" asp-for="VendorDescription">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PhoneNumber" class="col-3"></label>

                            <div class="col-9">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="la la-phone"></i>
                                        </span>
                                    </div>

                                    <input asp-for="PhoneNumber" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-3"></label>

                            <div class="col-9">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="la la-at"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Email" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="IsLocked" class="col-3"></label>

                            <div class="col-9">
                                <span asp-validation-for="VendorDescription" class="text-danger"></span>
                               

                                @if (Model.IsLocked == true)
                                {
                                    <input data-switch="true" asp-for="IsLocked" checked="checked" data-on-color="success" data-off-color="danger" />
                                }
                                else
                                {
                                    <input data-switch="true" asp-for="IsLocked" data-on-color="success" data-off-color="danger" />
                                }
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PasswordNew" class="col-3"></label>

                            <div class="col-9">
                                <span asp-validation-for="PasswordNew" class="text-danger"></span>
                                <input asp-for="PasswordNew" class="form-control">
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="PasswordConfirm" class="col-3"></label>

                            <div class="col-9">
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                <input asp-for="PasswordConfirm" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="separator separator-dashed my-10"></div>
                </div>
                <div class="col-xl-2"></div>
            </div>

            <!--end::Form-->
        </div>

    </div>
</form>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/js/pages/crud/forms/widgets/bootstrap-switch.js"></script>>
}

